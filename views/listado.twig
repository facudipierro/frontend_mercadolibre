			<div class="wrap-listado">
				{% for producto in productos %}
					<div class="row">
						<div class="col-md-2 col-sm-3 listado-foto">
							<a href="/items/{{ producto.id }}"><img src="{{ producto.thumbnail }}" alt="{{ producto.title }}"></a>
						</div>
						<div class="col-md-5 col-sm-6">
							<div class="listado-precio">
								${{ producto.price }} 
								{% if producto.shipping.free_shipping == true %}
								<i class="icon-shipping"></i>
								{% endif %}
							</div>
							<div class="listado-titulo">
								<a href="/items/{{ producto.id }}">{{ producto.title }}</a>
							</div>
						</div>
						<div class="col-md-2 col-md-offset-2 col-sm-3">
							<div class="listado-ubicacion">
								{{ producto.address.city_name }}
							</div>
						</div>
					</div>
					{% if loop.index < productos|length %}
						<div class="listado-producto"></div>
					{% endif %}
				{% endfor %}
			</div>
		</div>
		
	</div>
</body>
</html>